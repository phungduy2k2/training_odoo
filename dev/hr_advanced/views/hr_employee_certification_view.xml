<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  Tree View  -->
    <record id="view_hr_employee_certification_tree1" model="ir.ui.view">
        <field name="name">hr.employee.certification.tree</field>
        <field name="model">hr.employee.certification</field>
        <field name="arch" type="xml">
            <tree string="Chứng chỉ nhân viên">
                <field name="name"/>
                <field name="issuring_organization"/>
                <field name="issue_date"/>
                <field name="experience_date"/>
                <field name="years_of_experience"/>
            </tree>
        </field>
    </record>

    <!--  Form View  -->
    <record id="view_hr_employee_certification_form2" model="ir.ui.view">
        <field name="name">hr.employee.certification.form</field>
        <field name="model">hr.employee.certification</field>
        <field name="arch" type="xml">
            <form string="Chi tiết chứng chỉ">
                <sheet>
                    <!--                        <group>-->
                    <group>
                        <field name="name"/>
                        <field name="issuring_organization"/>
                    </group>
                    <group>
                        <field name="issue_date"/>
                        <field name="experience_date"/>
                        <field name="years_of_experience" readonly="1"/>
                    </group>
                    <!--                        </group>-->
                </sheet>
            </form>
        </field>
    </record>

    <!--  Search View  -->
    <record id="view_hr_employee_certification_search3" model="ir.ui.view">
        <field name="name">hr.employee.certification.search</field>
        <field name="model">hr.employee.certification</field>
        <field name="arch" type="xml">
            <search string="Lọc chứng chỉ">
                <field name="name"/>
                <field name="issuring_organization"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Issuing Organization" name="group_by_organization"
                            context="{'group_by': 'issuing_organization'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--  Action cho  -->
    <record id="action_hr_employee_certification4" model="ir.actions.act_window">
        <field name="name">Employee Certifications</field>
        <field name="res_model">hr.employee.certification</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_hr_employee_certification_search3"/>
        <field name="help">
            <p class="o_view_nocontent_smiling_face">
                Tạo chứng chỉ mới
            </p>
            <p>
                Quản lý các chứng chỉ của nhân viên
            </p>
        </field>
    </record>

    <!--  Menu  -->
    <menuitem id="menu_hr_employee_certification5"
              name="Chứng chỉ"
              parent="hr.menu_hr_root"
              action="action_hr_employee_certification4"
              sequence="150"/>

</odoo>
